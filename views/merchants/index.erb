<h1 class="table-heading">Merchants</h1>

<div id="merchant-padding">
    <button id="create-merchant-button" class="bigger-button"><a href="/merchants/new">Create Merchant</a></button>
</div>


<div id="merchant-section">
    <table id="merchant-table">
        <tr class="column-headings">
            <th>Name</th>
        </tr>
        <% @merchants.each do |merchant|%>
        <tr class="table-rows">
            <td <% if merchant.active == 0%> style="background-color: rgb(0,0,0,0.3);"<% end %>><%=merchant.name%></td>
            <td><button><a href="/merchants/<%= merchant.id %>/edit">Edit</a></button>
        <% end %>
        </tr>
    </table>
    <button class="deactivated"><a href="/merchants/all">View Deactivated</a></button>
</div>