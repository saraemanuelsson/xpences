<h2>Add Expense</h2>

<button><a href="/">Back</a></button>
<form method="post" action="/expenses/add">

    <div class='form-element'>
        <label for="merchant-select">Merchant:</label>
        <select name="merchant_id" id="merchant-select">
            <option selected disabled>Please select a merchant</option>
            <% @merchants.each do |merchant| unless merchant.active == 0 %>
                <option value=<%=merchant.id%>><%=merchant.name%></option>
                <% end %>
            <% end %>
        </select>
        <i class="required">*</i>
    </div>

    <div class='form-element'>
        <label for="date-select">Date:</label>
        <input
        type="date"
        name="date"
        id="date-select"
        required
        />
        <i class="required">*</i>
    </div>

    <div class='form-element'>
        <label for="amount">Amount:</label>
        <input
        type="number"
        min="0"
        value="0.00"
        step="0.01"
        name="amount"
        id="amount"
        required
        />
        <i class="required">*</i>
    </div>

    <div class="form-element">
        <label class="category_heading" for="tag-select">Category:</label>
        <% @tags.each do |tag| unless tag.active == 0 %>
        <input id=<%=tag.colour%>
        type="radio"
        name="tag_id"
        id="tag-select"
        value=<%=tag.id%>
        required
        />
        <label class="colourbox" for=<%=tag.colour%> style="background-color: <%=tag.colour%>;"><%=tag.category%></label>
        <% end %>
        <% end %>
        <i class="required">*</i>
    </div>

    <input type="submit" value="Add Expense">

</form>