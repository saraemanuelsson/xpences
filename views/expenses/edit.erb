<h2>Edit Expense</h2>

<button><a href="/expenses">Back</a></button>
<form method="post" action="/expenses/<%= @expense.id %>/edit">

    <div class='form-element'>
        <label for="merchant-select">Merchant:</label>
        <select name="merchant_id" id="merchant-select">
            <option value=<%=@expense.merchant_id%>><%=(Merchant.find_by_id(@expense.merchant_id)).name%></option>
            <% @merchants.each do |merchant| unless @expense.merchant_id == merchant.id %>
            <option value=<%=merchant.id%>><%= merchant.name %></option>
            <% end %>
            <% end %>
        </select>
    </div>

    <div class='form-element'>
        <label for="amount">Amount:</label>
        <input
        type="number"
        min="0"
        value=<%=(@expense.amount().to_f/100).round(2)%>
        step="0.01"
        name="amount"
        id="amount"
        />
    </div>

    <div class='form-element'>
        <label for="date-select">Date:</label>
        <input
        type="date"
        name="date"
        value=<%= @expense.date %>
        id="date-select"
        />
    </div>

    <div class='form-element'>
        <label for="tag-select">Category:</label>
        <select name="tag_id" id="tag-select">
            <option value=<%=@expense.tag_id%>><%=(Tag.find_by_id(@expense.tag_id)).category%></option>
            <% @tags.each do |tag| unless @expense.tag_id == tag.id %>
            <option value=<%=tag.id%>><%= tag.category %></option>
            <% end %>
            <% end %>
        </select>
    </div>

    <input type="submit" value="Save Changes">
</form>

<p>To delete expense: 
    <form method="post" action="/expenses/<%=@expense.id%>/delete">
        <input type="submit" value="Delete"/>
    </form>
</p>

